page {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.question {
  display: flex;
  flex-direction: column;
  background-color: rgba(224, 222, 222, 0.3);
  margin-top: 5rpx;
  margin-bottom: 15rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 15rpx 25rpx;
  box-shadow: 3px 3px 3px lavender;
}
.question .top {
  text-indent: 120rpx;
  flex: 3;
  position: relative;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  letter-spacing: 3rpx;
  color: rgba(108, 108, 247, 0.842);
}
.question .top .index {
  position: absolute;
  left: -120rpx;
  top: 0;
}
.question .bottom {
  flex: 1;
  margin-top: 15rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.question .bottom .ty {
  background-color: rgba(83, 240, 83, 0.884);
  color: #fff;
  float: left;
  padding: 5rpx 10rpx;
  border-radius: 7rpx;
}
.question .bottom .show {
  float: right;
}
.question .bottom .show text {
  margin-left: 35rpx;
  position: relative;
  top: 15rpx;
  font-size: 30rpx;
}
.question .bottom .show text.is_col {
  color: red;
}
